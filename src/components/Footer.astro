---
import { Mail, Instagram, Check } from 'lucide-astro';
import type { Translations } from '../i18n/types';

interface Props {
  t: Translations;
}

const { t } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white">
  <div class="container-custom py-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-12">
      <!-- About Section -->
      <div class="space-y-4">
        <h4 class="text-xl font-bold mb-4">{t.footer.aboutHeading}</h4>
        <p class="text-gray-300 leading-relaxed">
          {t.footer.aboutText}
        </p>
        <div class="pt-2 text-sm text-gray-400">
          <p class="font-semibold text-white">{t.contact.ownerName}</p>
          <p>{t.contact.address1}</p>
          <p>{t.contact.address2}</p>
        </div>
      </div>

      <!-- Services Section -->
      <div class="space-y-4">
        <h4 class="text-xl font-bold mb-4">{t.footer.servicesHeading}</h4>
        <ul class="space-y-3">
          <li class="flex items-start gap-2">
            <Check class="w-5 h-5 text-orange-500 flex-shrink-0 mt-0.5" />
            <span class="text-gray-300">{t.footer.services.printing}</span>
          </li>
          <li class="flex items-start gap-2">
            <Check class="w-5 h-5 text-orange-500 flex-shrink-0 mt-0.5" />
            <span class="text-gray-300">{t.footer.services.fastDelivery}</span>
          </li>
          <li class="flex items-start gap-2">
            <Check class="w-5 h-5 text-orange-500 flex-shrink-0 mt-0.5" />
            <span class="text-gray-300">{t.footer.services.modeling}</span>
          </li>
          <li class="flex items-start gap-2">
            <Check class="w-5 h-5 text-orange-500 flex-shrink-0 mt-0.5" />
            <span class="text-gray-300">{t.footer.services.shipping}</span>
          </li>
          <li class="flex items-start gap-2">
            <Check class="w-5 h-5 text-orange-500 flex-shrink-0 mt-0.5" />
            <span class="text-gray-300">{t.footer.services.pickup}</span>
          </li>
          <li class="flex items-start gap-2">
            <Check class="w-5 h-5 text-orange-500 flex-shrink-0 mt-0.5" />
            <span class="text-gray-300">{t.footer.services.consulting}</span>
          </li>
        </ul>
      </div>

      <!-- Contact Section -->
      <div class="space-y-4">
        <h4 class="text-xl font-bold mb-4">{t.footer.whyUsHeading}</h4>
        <p class="text-gray-300 leading-relaxed mb-6">
          {t.footer.whyUsText}
        </p>
        <div class="space-y-3">
          <a href="mailto:michal@fajny3dtisk.cz" class="flex items-center gap-3 text-gray-300 hover:text-orange-500 transition-all duration-300 ease-in-out group">
            <Mail class="w-5 h-5 text-orange-500 group-hover:scale-110 transition-transform" />
            <span>michal@fajny3dtisk.cz</span>
          </a>
          <a href="https://www.instagram.com/fajny_3dtisk/" target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 text-gray-300 hover:text-orange-500 transition-all duration-300 ease-in-out group">
            <Instagram class="w-5 h-5 text-orange-500 group-hover:scale-110 transition-transform" />
            <span>@fajny_3dtisk</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-700 pt-8 text-center space-y-2">
      <p class="text-gray-300 font-semibold">{t.footer.tagline}</p>
      <p class="text-sm text-gray-400">
        {t.footer.copyright.replace('{year}', currentYear.toString())}
      </p>
    </div>
  </div>
</footer>
