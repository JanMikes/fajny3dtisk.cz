---
import Layout from '../layouts/Layout.astro';
import Navigation from './Navigation.astro';
import Footer from './Footer.astro';
import { Image, Picture } from 'astro:assets';
import { Box, Clock, HandHeart, Lightbulb, FileUp, Calculator, Printer, Truck, CircleHelp, MapPin, ChevronDown, Instagram, User, Quote } from 'lucide-astro';
import type { Translations } from '../i18n/types';

// Import images for optimization
import logo from '../../public/fajny3d-tisk-logo.jpg';
import heroImg from '../../public/img/hero.jpg';
import michalImg from '../../public/img/michal.jpg';
import sabinaImg from '../../public/img/sabina.jpg';
import frankImg from '../../public/img/frank.jpg';

interface Props {
  t: Translations;
  url: string;
}

const { t, url } = Astro.props;
---

<Layout
  title={t.seo.title}
  description={t.seo.description}
  lang={t.lang}
  locale={t.locale}
  url={url}
  t={t}
>
  <Navigation t={t} />

  <!-- Hero Section -->
  <section class="min-h-screen flex items-center justify-center text-white relative overflow-hidden pt-10 md:pt-14">
    <!-- Background image -->
    <Picture
      src={heroImg}
      alt={t.hero.backgroundAlt}
      formats={['webp', 'jpg']}
      widths={[640, 1024, 1920]}
      class="absolute inset-0 w-full h-full object-cover"
      loading="eager"
      fetchpriority="high"
    />

    <!-- Brand-colored overlay for readability -->
    <div class="absolute inset-0 bg-gradient-to-br from-red-950/50 via-black/35 to-red-900/45"></div>

    <!-- Animated background elements -->
    <div class="absolute inset-0 opacity-30">
      <div class="absolute top-20 left-10 w-72 h-72 bg-red-600/50 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-20 right-10 w-96 h-96 bg-orange-600/50 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
    </div>

    <div class="container-custom text-center relative z-10">
      <div class="max-w-4xl mx-auto space-y-3 md:space-y-6">
        <!-- Logo -->
        <div class="flex justify-center mb-2 md:mb-4 animate-fade-in">
          <Image
            src={logo}
            alt={t.hero.logoAlt}
            width={192}
            height={192}
            class="w-24 h-24 md:w-36 md:h-36 rounded-full ring-4 ring-white/30 shadow-2xl hover:scale-110 transition-transform duration-500"
            format="webp"
            quality={85}
          />
        </div>

        <!-- Heading -->
        <h1 class="text-4xl md:text-6xl lg:text-7xl font-black leading-tight animate-fade-in-up">
          {t.hero.heading}<br />
          <span class="gradient-text bg-gradient-to-r from-red-400 via-orange-400 to-red-400 bg-clip-text text-transparent">
            {t.hero.location}
          </span>
        </h1>

        <!-- Subheading -->
        <p class="text-lg md:text-xl lg:text-2xl text-gray-300 max-w-3xl mx-auto leading-relaxed animate-fade-in-up" style="animation-delay: 0.2s;" set:html={t.hero.subheading.replace('\n', '<br />')}></p>

        <!-- CTA Button -->
        <div class="pt-2 md:pt-4 animate-fade-in-up" style="animation-delay: 0.4s;">
          <a
            href="#kontakt"
            class="inline-flex items-center gap-2 px-6 py-3 md:px-8 md:py-4 bg-gradient-to-r from-red-600 to-orange-500 text-white text-base md:text-lg font-bold rounded-full hover:shadow-2xl hover:scale-105 transition-all duration-300 ease-in-out"
          >
            {t.hero.cta}
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </section>

  <!-- Team Section -->
  <section id="o-mne" class="section-padding bg-white">
    <div class="container-custom">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-black text-center mb-6 text-gray-900" data-aos="fade-down">
        {t.team.heading}<br />
        <span class="gradient-text" set:html={t.team.subheading.replace('\n', '<br />')}></span>
      </h2>

      <p class="text-lg text-gray-700 text-center max-w-4xl mx-auto mb-16 leading-relaxed" data-aos="fade-up" set:html={t.team.intro}></p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12">
        <!-- Michal -->
        <div class="glass-white rounded-2xl p-8 hover-lift group" data-aos="fade-up" data-aos-delay="100">
          <div class="flex justify-center mb-6">
            <Image
              src={michalImg}
              alt={t.team.michal.imageAlt}
              width={320}
              height={320}
              class="w-40 h-40 rounded-full object-cover ring-4 ring-red-500/50 group-hover:ring-red-500 transition-all"
              format="webp"
              quality={85}
            />
          </div>
          <h3 class="text-2xl font-bold text-gray-900 text-center mb-2">{t.team.michal.name}</h3>
          <h4 class="text-lg font-semibold gradient-text text-center mb-4">{t.team.michal.role}</h4>
          <p class="text-gray-600 text-center leading-relaxed">
            {t.team.michal.description}
          </p>
        </div>

        <!-- Sabina -->
        <div class="glass-white rounded-2xl p-8 hover-lift group" data-aos="fade-up" data-aos-delay="200">
          <div class="flex justify-center mb-6">
            <Image
              src={sabinaImg}
              alt={t.team.sabina.imageAlt}
              width={320}
              height={320}
              class="w-40 h-40 rounded-full object-cover ring-4 ring-orange-500/50 group-hover:ring-orange-500 transition-all"
              format="webp"
              quality={85}
            />
          </div>
          <h3 class="text-2xl font-bold text-gray-900 text-center mb-2">{t.team.sabina.name}</h3>
          <h4 class="text-lg font-semibold gradient-text text-center mb-4">{t.team.sabina.role}</h4>
          <p class="text-gray-600 text-center leading-relaxed">
            {t.team.sabina.description}
          </p>
        </div>

        <!-- Frank -->
        <div class="glass-white rounded-2xl p-8 hover-lift group" data-aos="fade-up" data-aos-delay="300">
          <div class="flex justify-center mb-6">
            <Image
              src={frankImg}
              alt={t.team.frank.imageAlt}
              width={320}
              height={320}
              class="w-40 h-40 rounded-full object-cover ring-4 ring-red-500/50 group-hover:ring-red-500 transition-all"
              format="webp"
              quality={85}
            />
          </div>
          <h3 class="text-2xl font-bold text-gray-900 text-center mb-2">{t.team.frank.name}</h3>
          <h4 class="text-lg font-semibold gradient-text text-center mb-4">{t.team.frank.role}</h4>
          <p class="text-gray-600 text-center leading-relaxed">
            {t.team.frank.description}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section id="proc-ja" class="section-padding bg-gradient-to-br from-red-700 via-orange-700 to-red-800 text-white relative overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cg fill=\'none\' fill-rule=\'evenodd\'%3E%3Cg fill=\'%23ffffff\' fill-opacity=\'1\'%3E%3Cpath d=\'M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
    </div>

    <div class="container-custom relative z-10">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-black text-center mb-16" data-aos="fade-down" set:html={t.whyUs.heading.replace('\n', '<br />')}></h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="glass rounded-2xl p-8 hover-lift" data-aos="fade-up" data-aos-delay="100">
          <div class="flex justify-center mb-6">
            <div class="p-4 bg-white/20 rounded-full">
              <Box class="w-10 h-10" />
            </div>
          </div>
          <h3 class="text-2xl font-bold text-center mb-4">{t.whyUs.features.variability.title}</h3>
          <p class="text-white/90 text-center leading-relaxed">
            {t.whyUs.features.variability.description}
          </p>
        </div>

        <div class="glass rounded-2xl p-8 hover-lift" data-aos="fade-up" data-aos-delay="200">
          <div class="flex justify-center mb-6">
            <div class="p-4 bg-white/20 rounded-full">
              <Clock class="w-10 h-10" />
            </div>
          </div>
          <h3 class="text-2xl font-bold text-center mb-4">{t.whyUs.features.speed.title}</h3>
          <p class="text-white/90 text-center leading-relaxed" set:html={t.whyUs.features.speed.description}></p>
        </div>

        <div class="glass rounded-2xl p-8 hover-lift" data-aos="fade-up" data-aos-delay="300">
          <div class="flex justify-center mb-6">
            <div class="p-4 bg-white/20 rounded-full">
              <HandHeart class="w-10 h-10" />
            </div>
          </div>
          <h3 class="text-2xl font-bold text-center mb-4">{t.whyUs.features.friendliness.title}</h3>
          <p class="text-white/90 text-center leading-relaxed">
            {t.whyUs.features.friendliness.description}
          </p>
        </div>

        <div class="glass rounded-2xl p-8 hover-lift" data-aos="fade-up" data-aos-delay="400">
          <div class="flex justify-center mb-6">
            <div class="p-4 bg-white/20 rounded-full">
              <Lightbulb class="w-10 h-10" />
            </div>
          </div>
          <h3 class="text-2xl font-bold text-center mb-4">{t.whyUs.features.consulting.title}</h3>
          <p class="text-white/90 text-center leading-relaxed" set:html={t.whyUs.features.consulting.description}></p>
        </div>
      </div>
    </div>
  </section>

  <!-- Materials Section -->
  <section id="materialy" class="section-padding bg-gray-50">
    <div class="container-custom">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-black text-center mb-6" data-aos="fade-down">
        <span class="gradient-text">{t.materials.heading}</span><br />
        {t.materials.subheading}
      </h2>

      <p class="text-lg text-gray-700 text-center max-w-3xl mx-auto mb-12" data-aos="fade-up" set:html={t.materials.intro}></p>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
        <!-- PLA -->
        <div class="glass-white rounded-2xl p-8 hover-lift" data-aos="fade-up" data-aos-delay="0">
          <div class="flex items-center gap-4 mb-4">
            <div class="p-3 bg-gradient-to-br from-red-500 to-orange-500 rounded-full">
              <Box class="w-7 h-7 text-white" />
            </div>
            <h3 class="text-2xl font-black text-gray-900">{t.materials.pla.title}</h3>
          </div>
          <p class="text-gray-700 leading-relaxed">
            {t.materials.pla.description}
          </p>
        </div>

        <!-- PETG -->
        <div class="glass-white rounded-2xl p-8 hover-lift" data-aos="fade-up" data-aos-delay="100">
          <div class="flex items-center gap-4 mb-4">
            <div class="p-3 bg-gradient-to-br from-orange-500 to-red-500 rounded-full">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-black text-gray-900">{t.materials.petg.title}</h3>
          </div>
          <p class="text-gray-700 leading-relaxed">
            {t.materials.petg.description}
          </p>
        </div>

        <!-- TPU -->
        <div class="glass-white rounded-2xl p-8 hover-lift" data-aos="fade-up" data-aos-delay="200">
          <div class="flex items-center gap-4 mb-4">
            <div class="p-3 bg-gradient-to-br from-purple-500 to-pink-500 rounded-full">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-black text-gray-900">{t.materials.tpu.title}</h3>
          </div>
          <p class="text-gray-700 leading-relaxed">
            {t.materials.tpu.description}
          </p>
        </div>

        <!-- ASA -->
        <div class="glass-white rounded-2xl p-8 hover-lift" data-aos="fade-up" data-aos-delay="300">
          <div class="flex items-center gap-4 mb-4">
            <div class="p-3 bg-gradient-to-br from-blue-500 to-cyan-500 rounded-full">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-black text-gray-900">{t.materials.asa.title}</h3>
          </div>
          <p class="text-gray-700 leading-relaxed">
            {t.materials.asa.description}
          </p>
        </div>

        <!-- ABS -->
        <div class="glass-white rounded-2xl p-8 hover-lift" data-aos="fade-up" data-aos-delay="400">
          <div class="flex items-center gap-4 mb-4">
            <div class="p-3 bg-gradient-to-br from-green-500 to-emerald-500 rounded-full">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-black text-gray-900">{t.materials.abs.title}</h3>
          </div>
          <p class="text-gray-700 leading-relaxed">
            {t.materials.abs.description}
          </p>
        </div>

        <!-- PC -->
        <div class="glass-white rounded-2xl p-8 hover-lift" data-aos="fade-up" data-aos-delay="500">
          <div class="flex items-center gap-4 mb-4">
            <div class="p-3 bg-gradient-to-br from-gray-700 to-gray-900 rounded-full">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-black text-gray-900">{t.materials.pc.title}</h3>
          </div>
          <p class="text-gray-700 leading-relaxed">
            {t.materials.pc.description}
          </p>
        </div>
      </div>

      <p class="text-center text-gray-600 max-w-3xl mx-auto">
        {t.materials.colorsNote}
      </p>
    </div>
  </section>

  <!-- Process Section -->
  <section id="proces" class="section-padding bg-gradient-to-br from-orange-700 via-red-700 to-orange-800 text-white relative overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\'80\' height=\'80\' viewBox=\'0 0 80 80\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cg fill=\'none\' fill-rule=\'evenodd\'%3E%3Cg fill=\'%23ffffff\' fill-opacity=\'1\'%3E%3Cpath d=\'M50 50c0-5.523 4.477-10 10-10s10 4.477 10 10-4.477 10-10 10c0 5.523-4.477 10-10 10s-10-4.477-10-10 4.477-10 10-10zM10 10c0-5.523 4.477-10 10-10s10 4.477 10 10-4.477 10-10 10c0 5.523-4.477 10-10 10S0 25.523 0 20s4.477-10 10-10zm10 8c4.418 0 8-3.582 8-8s-3.582-8-8-8-8 3.582-8 8 3.582 8 8 8zm40 40c4.418 0 8-3.582 8-8s-3.582-8-8-8-8 3.582-8 8 3.582 8 8 8z\' /%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
    </div>

    <div class="container-custom relative z-10">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-black text-center mb-4" data-aos="fade-down" set:html={t.process.heading.replace('\n', '<br />')}></h2>
      <p class="text-white/90 text-center text-lg mb-16 max-w-2xl mx-auto" data-aos="fade-up">
        {t.process.subheading}
      </p>

      <!-- Step 1: Two paths -->
      <div class="mb-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">
          <div class="glass rounded-2xl p-8 hover-lift border-2 border-white/20" data-aos="fade-right" data-aos-delay="100">
            <div class="flex items-center gap-4 mb-4">
              <div class="p-3 bg-white/20 rounded-full">
                <FileUp class="w-8 h-8" />
              </div>
              <h3 class="text-xl font-bold">{t.process.ownModel.title}</h3>
            </div>
            <p class="text-white/90 leading-relaxed">
              {t.process.ownModel.description}
            </p>
          </div>

          <div class="glass rounded-2xl p-8 hover-lift border-2 border-white/20" data-aos="fade-left" data-aos-delay="100">
            <div class="flex items-center gap-4 mb-4">
              <div class="p-3 bg-white/20 rounded-full">
                <Lightbulb class="w-8 h-8" />
              </div>
              <h3 class="text-xl font-bold">{t.process.haveIdea.title}</h3>
            </div>
            <p class="text-white/90 leading-relaxed">
              {t.process.haveIdea.description}
            </p>
          </div>
        </div>
      </div>

      <!-- Steps 2, 3, 4 -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        <div class="glass rounded-2xl p-8 hover-lift border-2 border-white/20" data-aos="zoom-in" data-aos-delay="200">
          <div class="flex items-center gap-3 mb-4">
            <span class="w-8 h-8 bg-white rounded-full flex items-center justify-center font-black text-red-600 text-sm flex-shrink-0">1</span>
            <h3 class="text-xl font-bold">{t.process.calculation.title}</h3>
          </div>
          <p class="text-white/90 leading-relaxed">
            {t.process.calculation.description}
          </p>
        </div>

        <div class="glass rounded-2xl p-8 hover-lift border-2 border-white/20" data-aos="zoom-in" data-aos-delay="300">
          <div class="flex items-center gap-3 mb-4">
            <span class="w-8 h-8 bg-white rounded-full flex items-center justify-center font-black text-red-600 text-sm flex-shrink-0">2</span>
            <h3 class="text-xl font-bold">{t.process.printing.title}</h3>
          </div>
          <p class="text-white/90 leading-relaxed">
            {t.process.printing.description}
          </p>
        </div>

        <div class="glass rounded-2xl p-8 hover-lift border-2 border-white/20" data-aos="zoom-in" data-aos-delay="400">
          <div class="flex items-center gap-3 mb-4">
            <span class="w-8 h-8 bg-white rounded-full flex items-center justify-center font-black text-red-600 text-sm flex-shrink-0">3</span>
            <h3 class="text-xl font-bold">{t.process.delivery.title}</h3>
          </div>
          <p class="text-white/90 leading-relaxed">
            {t.process.delivery.description}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Gallery Section -->
  <section id="ukazky" class="section-padding bg-white">
    <div class="container-custom">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-black text-center mb-6" data-aos="fade-down">
        {t.gallery.heading} <span class="gradient-text">{t.gallery.heading.split(' ').slice(1).join(' ')}</span><br />
        {t.gallery.subheading}
      </h2>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 mt-12" id="gallery" data-aos="fade-up">
        {[...Array(16)].map((_, i) => (
          <a
            href={`/img/gallery/${String(i + 1).padStart(2, '0')}.jpg`}
            class="glightbox group relative overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 aspect-square"
            data-gallery="gallery"
          >
            <img
              src={`/img/thumbs/${String(i + 1).padStart(2, '0')}.jpg`}
